<main>

    <h1>CadFunc</h1>

    <form action="/teste" method="POST">

        <input type="text" placeholder="Digite seu email" name="nome">
        <input type="text" placeholder="Digite sua senha" password="password">

        <input type="submit" value="Entrar" class="submitBtn">

    </form>

</main>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Idade</th>
            <th>Selecionar</th>
        </tr>
    </thead>

    <tbody>

        {{#each dados}}
            <tr>
                <td>{{nome}}</td>
                <td>{{idade}}</td>
                <td><a href="selecionar/{{id}}">Selecionar</a></td>
            </tr>
        {{/each}}

    </tbody>
</table>