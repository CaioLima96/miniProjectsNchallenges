<main>

    <h1>Cadastrar Funcionário</h1>

    <form action="/cadastrarfuncionario" method="POST" class="form">

        <input type="text" placeholder="Nome" name="nome" required id="nome">
        <input type="number" placeholder="Idade" name="idade" required id="idade">
        <input type="mail" placeholder="Email" name="email" required id="email">
        <input type="tel" placeholder="Telefone" name="telefone" id="telefone" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}">
        <input type="text" placeholder="Cargo" name="cargo" required maxlength="20">
        <input type="text" placeholder="Endereço" name="endereco" required id="endereco" maxlength="50"> 
        <input type="number" placeholder="Salário" name="salario" required id="salario" max="5">
        <input type="text" placeholder="Status" name="status" required id="status" maxlength="8">
        <input type="text" placeholder="Data Admissao" name="dataAdmissao" required id="dataAdmissao">

        <input type="submit" placeholder="Cadastrar" class="submitBtn">

    </form>
</main>